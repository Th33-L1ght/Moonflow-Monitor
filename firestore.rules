
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for 'children' collection
    match /children/{childId} {
      // A logged-in user can create a profile if they set themselves as the parent.
      allow create: if request.auth != null && request.resource.data.parentUid == request.auth.uid;
      
      // The parent or the linked child can read or update the profile.
      allow read, update: if request.auth != null && (
                            resource.data.parentUid == request.auth.uid || 
                            resource.data.childUid == request.auth.uid
                          );
      
      // Only the parent can delete a profile.
      allow delete: if request.auth != null && resource.data.parentUid == request.auth.uid;
    }
    
    // Rules for 'feedback' collection
    match /feedback/{feedbackId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Rules for 'invites' collection
    match /invites/{inviteId} {
        allow create: if request.auth != null && request.resource.data.parentUid == request.auth.uid;
        allow read, update: if request.auth != null; // Allow any authenticated user to read/update for invite acceptance
    }
  }
}
