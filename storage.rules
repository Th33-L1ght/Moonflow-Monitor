rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read avatars since they are public URLs.
    // Allow authenticated users to write only to their own folder.
    // The {allPaths=**} wildcard matches any file or folder under the user's ID.
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
