rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Avatars can only be uploaded by authenticated users into their own sandboxed folder.
    // The {allPaths=**} wildcard allows them to create subdirectories as needed for organization.
    match /avatars/{userId}/{allPaths=**} {
      allow read; // Allow public read for avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
